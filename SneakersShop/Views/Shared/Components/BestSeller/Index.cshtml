@model IEnumerable<SneakersShop.Models.Product>

<div class="colorlib-product">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
				<h2>Best Sellers</h2>
			</div>
		</div>
		<div class="row row-pb-md">
			@foreach(var item in Model)
			{
				<div class="col-lg-3 mb-4 text-center">
					<div class="product-entry border">
						<a href="/Products/Details/@item.ProductId" class="prod-img">
							<img src="@item.ProductPhoto" class="img-fluid" alt="">
						</a>
						<div class="desc">
							<h2><a href="/Products/Details/@item.ProductId">@item.ProductName</a></h2>
							<span class="price">@item.ProductPirce</span>
						</div>
					</div>
				</div>
			}
			<div class="w-100"></div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center">
				<p><a href="/Products" class="btn btn-primary btn-lg">Shop All Products</a></p>
			</div>
		</div>
	</div>
</div>